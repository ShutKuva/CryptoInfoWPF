<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Color x:Key="BaseLight">#CEE7F3</Color>
    <Color x:Key="BaseDark">#0E0E52</Color>
    <Color x:Key="DarkBlue">#150578</Color>
    <Color x:Key="LightDarkBlue">#3943B7</Color>
    <Color x:Key="Green">#11FFA9</Color>
    <Color x:Key="Red">#FF5A5A</Color>

    <SolidColorBrush Color="{StaticResource BaseLight}" x:Key="BaseLightBrush"/>
    <SolidColorBrush Color="{StaticResource BaseDark}" x:Key="BaseDarkBrush"/>
    <SolidColorBrush Color="{StaticResource DarkBlue}" x:Key="DarkBlueBrush"/>
    <SolidColorBrush Color="{StaticResource LightDarkBlue}" x:Key="LightDarkBlueBrush"/>
    <SolidColorBrush Color="{StaticResource Green}" x:Key="GreenBrush"/>
    <SolidColorBrush Color="{StaticResource Red}" x:Key="RedBrush"/>

    <FontFamily x:Key="MainFont">pack://application:,,,/Fonts/#Inter_Regular</FontFamily>

</ResourceDictionary>