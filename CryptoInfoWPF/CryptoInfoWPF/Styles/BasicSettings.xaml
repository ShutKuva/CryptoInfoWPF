<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Color x:Key="BaseLight">#CEE7F3</Color>
    <Color x:Key="Green">#11FFA9</Color>
    <Color x:Key="Red">#FF5A5A</Color>

    <SolidColorBrush Color="{StaticResource BaseLight}" x:Key="BaseLightBrush"/>
    <SolidColorBrush Color="{StaticResource Green}" x:Key="GreenBrush"/>
    <SolidColorBrush Color="{StaticResource Red}" x:Key="RedBrush"/>

    <FontFamily x:Key="MainFont">pack://application:,,,/Fonts/#Inter_Regular</FontFamily>

</ResourceDictionary>